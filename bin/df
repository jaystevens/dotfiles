#!/usr/bin/env python

import subprocess

dfcmd = subprocess.Popen('df -Ph', stdout=subprocess.PIPE, stderr=subprocess.PIPE, shell=True)
intxt = dfcmd.communicate()[0]
intxt = intxt.split('\n')
outtxt = ''

for line in intxt:
    a = line.split()
    if len(a) > 0:
        a.remove(a[0])
        for i in a:
            outtxt += '%s' % i
            alast = (len(a) - 1)
            if i == a[alast]:
                outtxt += '\n'
            else:
                outtxt += '\t'
print(outtxt)
    
